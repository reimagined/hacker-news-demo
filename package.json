{
  "name": "hacker-news-resolve",
  "version": "1.0.0",
  "description": "A React & Redux & Resolve implementation of Hacker News",
  "scripts": {
    "build": "resolve-scripts build",
    "start": "resolve-scripts start",
    "dev": "resolve-scripts dev",
    "import": "babel-node ./import",
    "flow": "flow",
    "prettier": "prettier --single-quote --no-semi --write \"**/*.js\"",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:functional": "npm run build && testcafe chrome ./tests/functional --app \"IS_TEST=true npm run start\"",
    "test:functional:debug": "npm run build && testcafe chrome ./tests/functional --app \"IS_TEST=true npm run start\" --inspect-brk --debug-mode",
    "lint-staged": "lint-staged"
  },
  "pre-commit": [
    "lint-staged",
    "test"
  ],
  "lint-staged": {
    "*.{js,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "redux",
    "resolve",
    "hackernews",
    "event-sourcing",
    "cqrs"
  ],
  "author": "reimagined team",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.0",
    "clone": "^2.1.1",
    "express": "^4.15.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "graphql": "^0.11.7",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.1.4",
    "jsonwebtoken": "^7.4.3",
    "object-hash": "^1.1.8",
    "plur": "^2.1.2",
    "progress": "^2.0.0",
    "prop-types": "^15.5.10",
    "query-string": "^5.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-helmet": "^5.1.3",
    "react-pure-render": "^1.0.2",
    "react-redux": "^5.0.3",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-timeago": "^3.4.3",
    "redux": "^3.7.2",
    "resolve-bus-memory": "0.0.42",
    "resolve-es": "0.0.42",
    "resolve-redux": "0.0.42",
    "resolve-scripts": "0.0.42",
    "resolve-storage-lite": "0.0.42",
    "sanitizer": "^0.1.3",
    "seamless-immutable": "^7.1.2",
    "styled-components": "^2.2.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.52.0",
    "jest": "^20.0.4",
    "lint-staged": "4.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "1.6.0",
    "react-test-renderer": "^16.0.0",
    "sinon": "^3.2.1",
    "style-loader": "^0.18.2",
    "testcafe": "^0.18.1",
    "url-loader": "^0.5.9"
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tests/unit/jest-setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/",
      "resolve.build.config.js",
      "resolve.client.config.js",
      "resolve.server.config.js",
      "common/immutable.js",
      "server/"
    ],
    "moduleNameMapper": {
      ".*\\.(css|less)$": "<rootDir>/tests/ignore-css.js"
    },
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ]
  }
}
