{
  "name": "hacker-news-resolve",
  "version": "1.0.0",
  "description": "A React & Redux & Resolve implementation of Hacker News",
  "scripts": {
    "build": "resolve-scripts build",
    "start": "resolve-scripts start",
    "dev": "resolve-scripts dev",
    "import": "babel-node ./import",
    "flow": "flow",
    "prettier": "prettier --single-quote --no-semi --write \"**/*.js\"",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll",
    "test:functional": "npm run build && cross-env IS_TEST=true testcafe chrome ./tests/functional --app \"npm run start\"",
    "test:functional:debug": "npm run build && cross-env IS_TEST=true testcafe chrome ./tests/functional --app \"npm run start\" --inspect-brk --debug-mode",
    "lint-staged": "lint-staged"
  },
  "pre-commit": [
    "lint-staged",
    "test",
    "flow"
  ],
  "lint-staged": {
    "*.{js,css}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "keywords": [
    "react",
    "redux",
    "resolve",
    "hackernews",
    "event-sourcing",
    "cqrs"
  ],
  "author": "reimagined team",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "express": "^4.16.2",
    "isomorphic-fetch": "^2.2.1",
    "js-cookie": "^2.2.0",
    "plur": "^2.1.2",
    "progress": "^2.0.0",
    "query-string": "^5.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "resolve-bus-memory": "0.2.2",
    "resolve-es": "0.2.2",
    "resolve-readmodel-memory": "0.2.2",
    "resolve-redux": "0.2.2",
    "resolve-scripts": "0.2.2",
    "resolve-storage-lite": "0.2.2",
    "sanitizer": "^0.1.3",
    "seamless-immutable": "^7.1.2",
    "styled-components": "^2.4.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "flow-bin": "^0.63.1",
    "jest": "^22.0.6",
    "lint-staged": "^6.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "1.10.2",
    "testcafe": "^0.18.6"
  },
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/tests/unit/jest-setup.js"
    ],
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "dist/",
      "coverage/",
      "resolve.build.config.js",
      "resolve.client.config.js",
      "resolve.server.config.js"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react/",
      "node_modules/enzyme/"
    ]
  }
}
